<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: rgb(202, 197, 190);
        }
        .header {
            background-color: #ffffff;
            overflow: hidden;
            padding: 10px;
        }
        .logo {
            float: left;
            margin-left: 20px;
            color: white;
            font-size: 20px;
        }
        /* Estilos para el menú desplegable */
        .dropdown {
            position: fixed;
            top: 0;
            right: 0;
            padding: 10px;
            background-color: #ffffff;
            z-index: 1000; /* Para que esté por encima del contenido */
            right: 0;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ffffff;
            min-width: 160px;
            z-index: 1000; /* Para que esté por encima del contenido */
            right:  0;
        }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .dropdown-content a {
            color: rgb(0, 0, 0);
            padding: 12px 16px;
            text-decoration: none;
            display: block;
            transition: background-color 0.3s;
        }

        .dropdown-content a:hover {
            background-color: #555;
        }
        
        .logout-btn {
            color: rgb(0, 0, 0);
            background-color: #ffffff;
            border: none;
            cursor: pointer;
            transition: background-color 0.3s;
            padding: 14px 16px;
        }
        .logout-btn:hover {
            background-color: #c9302c;
        }
        .content {
            padding: 20px;
            width: 80%; /* Ancho del contenedor */
            margin: 0 auto; /* Centrar el contenedor */
            background-color: #ffffff; /* Color de fondo del contenedor */
            border-radius: 10px; /* Borde redondeado */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Sombra */
            margin-top: 50px; /* Espacio desde arriba */
        }
    </style>
</head>
<body>
    <div class="header">
        <!-- Logo -->
        <div class="logo">
            <img src="/publico/imagenes/sosya-color-130px.png" alt="Logo" width="80" height="30">
        </div>
        <!-- Menú -->.
        <!-- Menú desplegable -->
        <div class="dropdown">
            <button class="dropdown-toggle">☰</button>
            <div class="dropdown-content">
                <a href="http://localhost:3000/dashboard">Home</a>
                <a href="http://localhost:3000/perfil">Profile</a>
                <a href="http://localhost:3000/documentos">Documentos</a>
                <a href="http://localhost:3000/solicitar-codigo">Documentos a Firmar</a>
                <button class="logout-btn" onclick="logout()">Logout</button>
            </div>
        </div>
    </div>
    
    <div class="content">
        <h2>Firma Digital</h2>
        <h1>Bienvenido, <%= user.username %></h1>
        <p> <%= user.nombre %></p>

        <!-- Aquí puedes mostrar el contenido del dashboard -->
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // Función para obtener el nombre de usuario y mostrar el mensaje de bienvenida
        $(document).ready(function() {
            // Simulación de obtener el nombre de usuario, puedes modificar esta parte según tu sistema de autenticación
            var userName = " "; // Aquí deberías obtener el nombre de usuario desde tu sistema de autenticación
            
            // Mostrar el mensaje de bienvenida con el nombre de usuario
            $("#welcome-message").text("Bienvenido " + userName + "!");
        });

        // Función para cerrar sesión
        function logout() {
            // Aquí puedes agregar el código para cerrar sesión, por ejemplo, redireccionar a la página de inicio de sesión
            window.location.href = '/login';
        }
    </script>
</body>
</html>
